<?xml version="1.0" encoding="utf-8"?>
<schemalist>
  <schema path="/org/x/jargonaut/" id="org.x.jargonaut">
    <key name="tls-connection" type="b">
      <default>true</default>
    </key>
    <key name="server" type="s">
      <default>"irc.spotchat.org"</default>
    </key>
    <key name="port" type="i">
      <default>6697</default>
    </key>
    <key name="channel" type="s">
      <default>"#minttest"</default>
    </key>
    <key name="nickname" type="s">
      <default>""</default>
    </key>
    <key name="password" type="s">
      <default>""</default>
    </key>
    <key name="prefer-dark-mode" type="b">
      <default>false</default>
    </key>
    <key name="user-list-visible" type="b">
      <default>true</default>
    </key>
    <key name="debug" type="b">
      <default>false</default>
      <summary>Whether to print debug information to stdout</summary>
    </key>
    <key name="hw-acceleration" type="b">
      <default>false</default>
      <summary>WebKit2 HW Acceleration</summary>
    </key>
    <key name="show-thumbs" type="b">
      <default>false</default>
      <summary>Whether to show thumbnails or not</summary>
    </key>
  </schema>
</schemalist>
